<odoo>
  <data>
    <template id="mounthly_header">
      <div class="header">
        <div class="row">
          <div class="col-xs-12">
            <img class="img-responsive" src="/sigesalud/static/src/img/report-header.png" />
          </div>
        </div>

        <div class="row">
          <div class="panel" style="max-height: 50px;">
            <div class="panel-heading">
              <h3 class="text-center"> Reporte Mensual </h3>
            </div>
          </div>
        </div>

        <div class="row zero_min_height">
          <div class="col-xs-12">
            <div style="border-bottom: 1px solid black;"/>
          </div>
        </div>

      </div>
    </template>

    <template id="report_mounthly">
      <t t-call="report.html_container">
        <t t-call="sigesalud.mounthly_header"/>
          <t t-call="report.external_layout">

            <div class="page">

              <h4> <strong> Fecha: </strong> <span t-esc="data['date']"/> </h4>
              <h4> <strong> Mes: </strong> <span t-esc="data['month']"/> </h4>
              
              <t t-if="data['cooperative']">

                <table class="table table-condensed">
                
                  <thead>

                    <tr style="border: 0;">
                      <th colspan="1" class="text-center" style="border-top: 1px solid black; border-left: 1px solid black; border-bottom: 0px; border-right: 1px solid black">
                        
                      </th>

                      <th colspan="6" class="text-center" style="border-top: 1px solid black; border-left: 1; border-bottom: 0px; border-right: 1px solid black;">
                        Uso de Poliza
                      </th>
                    </tr>

                    <th class="text-center" style="border-left: 1px solid black; border-top: 0; border-bottom: 1px;  border-right: 1px solid black;">
                      Cooperativa
                    </th>

                    <th class="text-center">
                      N Titulares
                    </th>

                    <th class="text-center">
                      N Beneficiarios
                    </th>

                    <th class="text-center">
                      N de Eventos:
                    </th>

                    <th class="text-center">
                      Tipos de Eventos
                    </th>

                    <th class="text-center">
                      Monto total
                    </th>

                    <th class="text-center">
                      Porcentaje de Uso
                    </th>

                  </thead>

                  <tbody>

                    <tr>

                      <td> 
                        <t class="text-center" t-esc="data['cooperative']['name']"/> 
                      </td>

                      <td> 
                        <span class="badge"> <t class="text-center" t-esc="data['cooperative']['num_aso']"/> </span>
                      </td>

                      <td> 
                        <span class="badge"> <t class="text-center" t-esc="data['cooperative']['events_aso']"/> </span>
                      </td>

                      <td> 
                        <span class="badge"> <t class="text-center" t-esc="data['cooperative']['mount_aso']"/> </span>
                      </td>

                      <td>
                        <div class="progress">
                          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            <t t-esc="data['cooperative']['percentage_aso']"/> %
                          </div>
                        </div>
                      </td>

                    </tr>

                  </tbody>

                </table>
                
                <table class="table">

                  <thead>

                    <tr style="border: 0;">
                      <th colspan="1" class="text-center" style="border-top: 1px solid black; border-left: 1px solid black; border-bottom: 0px; border-right: 1px solid black">
                        Beneficiarios
                      </th>

                      <th colspan="1" class="text-center" style="border-top: 1px solid black; border-left: 1px solid black; border-bottom: 0px; border-right: 1px solid black">
                        Cooperativa
                      </th>

                      <th colspan="1" class="text-center" style="border-top: 1px solid black; border-left: 1px solid black; border-bottom: 0px; border-right: 1px solid black">
                        Parentesco con el Titular
                      </th>

                      <th colspan="4" class="text-center" style="border-top: 1px solid black; border-left: 1; border-bottom: 0px; border-right: 1px solid black;">
                        Uso de Poliza
                      </th>
                    </tr>

                    <th class="text-center" style="border-left: 1px solid black; border-top: 0; border-bottom: 1px;  border-right: 1px solid black;">
                      
                    </th>

                    <th class="text-center" style="border-left: 1px solid black; border-top: 0; border-bottom: 1px;  border-right: 1px solid black;">
                      
                    </th>

                    <th class="text-center" style="border-left: 1px solid black; border-top: 0; border-bottom: 1px;  border-right: 1px solid black;">
                      
                    </th>

                    <th class="text-center" style="border: 1px solid black;">
                      Numero de Eventos
                    </th>

                    <th class="text-center" style="border: 1px solid black;">
                      Tipo de Eventos:
                    </th>

                    <th class="text-center" style="border: 1px solid black;">
                      Monto toltal:
                    </th>

                    <th class="text-center" style="border: 1px solid black;">
                      Porcentaje de uso:
                    </th>

                  </thead>

                  <tbody>

                    <tr>

                      <td style="border: 1px solid black;"> 
                        <span class="badge"> <t class="text-center" t-esc="data['cooperative']['beneficiaries']['num']"/> </span>
                      </td>

                      <td style="border: 1px solid black;"> 
                        <span class="badge"> <t class="text-center" t-esc="data['cooperative']['beneficiaries']['events']"/> </span>
                      </td>

                      <td style="border: 1px solid black;"> 
                        <span class="badge"> <t  class="text-center" t-esc="data['cooperative']['beneficiaries']['mount']"/> </span>
                      </td>

                      <td style="border: 1px solid black;">
                        <div class="progress">
                          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            <t t-esc="data['cooperative']['beneficiaries']['percentage']"/> %
                          </div>
                        </div>
                      </td>

                    </tr>

                  </tbody>

                </table>

              </t>

            </div>

          </t>
      </t>
    </template>

    <template id="external_layout_footer_customized_mountly" inherit_id="report.external_layout_footer">
      <xpath expr="//div[@class='footer']" position="replace">
        <div class="footer">
          <div class="row">
        
            <div class="col-xs-12">
              <img class="img-responsive" src="/sigesalud/static/src/img/report-footer.png" />
            </div>

          </div>

        </div>
      </xpath>
    </template>

  </data>
</odoo>
