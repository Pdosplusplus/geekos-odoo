<odoo>
  <data>
    <template id="project_header_specific">
        <div class="header">
          <div class="row">
        
            <div class="col-xs-3">
              <img class="img-responsive" src="/agili/static/src/img/logo-5.png" style="max-height: 45px;"/>
            </div>

            <div class="col-xs-9 text-right" style="margin-top:20px;">
              Consejo Federal de Gobierno
            </div>

          </div>

          <div class="row zero_min_height">
            <div class="col-xs-12">
              <div style="border-bottom: 1px solid black;"/>
            </div>
          </div>

          <div class="row">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="text-center"> Reporte Especifico</h3>
              </div>
            </div>
          </div>

        </div>
    </template>

    <template id="report_project_specific">
      <t t-call="report.html_container">
        <t t-call="agili.project_header_specific"/>
        <t t-call="report.external_layout">
          
          <div class="page">

            <t t-if="data['cooperative']">
              <div class="center">
                <h4> <strong> Cooperativa: </strong> <span t-esc="data['cooperative']"/> </h4> 
              </div>
            </t>

            <t t-if="data['responsible']">
              <div class="center">
                <h4> <strong> Cooperativista: </strong> <span t-esc="data['responsible']"/> </h4> 
              </div>
            </t>

            <t t-if="data['projects']">
              <div class="row"> 
                
                <h4> <strong> Proyectos: </strong> </h4>
                
                <div class="panel panel-default table-responsive">
                  
                  <table class="table table-hover ">
                    
                    <thead>
                      <th> Nombre </th>
                      <th> Fecha Inicio </th>
                      <th> Fecha Fin </th>
                      <th> Dias Planificadas </th>
                      <th> Dias Ejecutadas</th>
                      <th> Porcentaje de avance </th>
                      <th> Reporte de avance real </th>
                    </thead>

                    <tbody>

                      <t t-foreach="data['projects']" t-as="project">

                        <tr>
                        
                          <td>
                            <span t-esc="project.name"/>
                          </td>

                          <td>
                            <span class="badge badge-danger" t-esc="project.start_date"/>
                          </td>

                          <td>
                            <span class="badge badge-danger" t-esc="project.end_date"/>
                          </td>

                          <td>
                            <span class="badge badge-danger" t-esc="project.days_plan"/>
                          </td>

                          <td>
                            <span class="badge badge-danger" t-esc="project.days_exe"/>
                          </td>

                          <td>
                            <div class="progress">
                              <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                                <t t-esc="project.pj_progress"/> %
                              </div>
                            </div>
                          </td>

                          <td>
                            <div class="progress">
                              <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                                <span t-esc="project.pj_work_real"/> % 
                              </div>
                            </div>
                          </td>

                        </tr>
                      </t>

                    </tbody>
                  </table>
                </div>

              </div>
            </t>

            <t t-if="data['days_plan']">
              <div class="center">
                <h4> <strong> Dias planificados: </strong> <span class="badge" t-esc="data['days_plan']"/> </h4>
              </div>
            </t>

            <t t-if="data['days_exe']">
              <div class="center">
                <h4> <strong> Dias ejecutados: </strong> <span class="badge" t-esc="data['days_exe']"/> </h4> 
              </div>
            </t>

          </div>
        </t>
      </t>
    </template>

  </data>
</odoo>
