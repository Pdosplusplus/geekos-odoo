<odoo>
<data>          
  <template id="report_project_view">
    <t t-call="report.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="report.external_layout">
          
          <div class="page">
            
            <div class="page-header">
              <center>
                <h3> Reporte del Proyecto </h3>
              </center>
            </div>

            Fecha Inicio: <span class="badge" t-field="o.start_date"/> 
            Fecha entrega: <span class="badge" t-field="o.end_date"/>
            
            <br/> <br/>
            
            <table class="table table-condensed">
                    
              <thead>
                <th colspan="2" class="center">
                  Datos del Proyecto
                </th>
              </thead>

              <tbody>
                
                <tr>
                    <td>Estado:</td>
                    <td>
                        <t t-esc="o.state"/>
                    </td>
                </tr>

                <tr>
                    <td>Name:</td>
                    <td>
                        <t t-esc="o.name"/>
                    </td>
                </tr>

                <tr>
                    <td>Descripcion:</td>
                    <td>
                        <t t-esc="o.description"/>
                    </td>
                </tr>

                <tr>
                    <td>Responsables:</td>
                    <td>
                        <t t-foreach="o.responsible_ids" t-as="responsible">
                           <t t-esc="responsible.name"/>
                        </t>
                       
                    </td>
                </tr>

                <tr>
                    <td>Horas Hombres Planificadas:</td>
                    <td>
                        <span class="badge" t-esc="o.hour_man"/>
                    </td>
                </tr>

                <tr>
                    <td>Horas Hombres Ejecutadas:</td>
                    <td>
                        <span class="badge" t-esc="o.hour_man_exe"/>
                    </td>
                </tr>

                <tr>
                    <td>Porcentaje de Avance:</td>
                    <td>
                      
                      <div class="progress">
                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em;">
                            <t t-esc="o.porcen_project"/> %
                        </div>
                      </div>
                  
                    </td>
                </tr>

              </tbody>
          
            </table>
           

            <h4>Actividades:</h4>
            
            <br/>

            <table class="table table-condensed">
            
              <thead>

                <th>
                  Fecha de incio
                </th>

                <th>
                  Fecha de entrega
                </th>
                
                <th>
                  Nombre
                </th>
                
                <th>
                  Objetivo
                </th>
              
                <th>
                  Horas Hombre Planificadas
                </th>

                <th>
                  Horas Hombre Ejecutadas
                </th>

                <th>
                  Responsable
                </th>

              </thead>

              <tbody>

                <t t-foreach="o.activity_ids" t-as="activity">
                  <tr>

                    <td>
                       <span class="badge" t-field="activity.ac_start_date"/>
                    </td>
                   
                    <td>
                       <span class="badge" t-field="activity.ac_end_date"/>
                    </td>

                    <td>
                       <span t-field="activity.name"/>
                    </td>

                    <td>
                       <span t-field="activity.objetive"/>
                    </td>

                    <td>
                       <span class="badge" t-field="activity.ac_hour_man"/>
                    </td>

                    <td>
                       <span class="badge" t-field="activity.ac_hour_man_exe"/>
                    </td>

                    <td>
                       <span t-field="activity.ac_responsible_id.name"/>
                    </td>

                  </tr>

                </t>              
               
              </tbody>
          
            </table>


            <table class="table table-condensed">
            
              <thead>
                <th colspan="2" class="center">
                  Entregables
                </th>
              </thead>

              <tbody>
                
                <t t-foreach="o.deliverable_ids" t-as="deliverable">

                  <tr>
                    <td>
                      Nombre: <span t-field="deliverable.name"/>
                    </td>
                  </tr>

                </t>              
               
              </tbody>
          
            </table>
          </div>
          
        </t>
      </t>
    </t>
  </template>
</data>
</odoo>
