<odoo>
<data>
  <report
            id="report_project"
            model="agili.project"
            string="Reporte del Proyecto"
            name="agili.report_project_view"
            file="agili.report_project"
            report_type="qweb-pdf" />
            
  <template id="report_project_view">
    <t t-call="report.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="report.external_layout">
          
          <div class="page">
            
            <div class="page-header">
              <center>
                <h3> Reporte del Proyecto, ID: 
                  <t t-esc="o.id"/>
                </h3>
              </center>
            </div>

            Fecha Inicio: <span t-field="o.start_date"/> 
            Fecha entrega: <span t-field="o.end_date"/>
            
            <br/> <br/>
            
            <table class="table table-condensed">
                    
              <thead>
                <th colspan="2" class="center">
                  Datos del Proyecto
                </th>
              </thead>

              <tbody>
                
                <tr>
                    <td>Estado:</td>
                    <td>
                        <t t-esc="o.state"/>
                    </td>
                </tr>

                <tr>
                    <td>Name:</td>
                    <td>
                        <t t-esc="o.name"/>
                    </td>
                </tr>

                <tr>
                    <td>Descripcion:</td>
                    <td>
                        <t t-esc="o.description"/>
                    </td>
                </tr>

                <tr>
                    <td>Responsables:</td>
                    <td>
                        <t t-foreach="o.responsible_ids" t-as="responsible">
                           <t t-esc="responsible.name"/>
                        </t>
                       
                    </td>
                </tr>

                <tr>
                    <td>Horas Hombres:</td>
                    <td>
                        <t t-esc="o.hour_man"/>
                    </td>
                </tr>

                <tr>
                    <td>Porcentaje de Avance:</td>
                    <td>
                        <t t-esc="o.porcen_project"/> %
                    </td>
                </tr>

              </tbody>
          
            </table>
           

            <h3>Actividades:</h3>
            
            <br/>

            <table class="table table-condensed">
            
              <thead>

                <th>
                  Fecha de incio
                </th>

                <th>
                  Fecha de entrega
                </th>
                
                <th>
                  Nombre
                </th>
                
                <th>
                  Objetivo
                </th>
              
                <th>
                  Horas Hombre
                </th>

                <th>
                  Responsable
                </th>

              </thead>

              <tbody>

                <t t-foreach="o.activity_ids" t-as="activity">
                  <tr>

                    <td>
                       <span t-field="activity.ac_start_date"/>
                    </td>
                   
                    <td>
                       <span t-field="activity.ac_end_date"/>
                    </td>

                    <td>
                       <span t-field="activity.name"/>
                    </td>

                    <td>
                       <span t-field="activity.objetive"/>
                    </td>

                    <td>
                       <span t-field="activity.ac_hour_man"/>
                    </td>

                    <td>
                       <span t-field="activity.ac_responsible_id.name"/>
                    </td>

                  </tr>

                </t>              
               
              </tbody>
          
            </table>


            <table class="table table-condensed">
            
              <thead>
                <th colspan="2" class="center">
                  Entregables
                </th>
              </thead>

              <tbody>
                
                <t t-foreach="o.deliverable_ids" t-as="deliverable">

                  <tr>
                    <td>
                      Nombre: <span t-field="deliverable.name"/>
                    </td>
                  </tr>

                </t>              
               
              </tbody>
          
            </table>
          </div>
          
        </t>
      </t>
    </t>
  </template>
</data>
</odoo>
