<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="external_layout_header_customized" inherit_id="report.external_layout_header">
                <xpath expr="//div[@class='header']" position="replace">
                    <div class="header">
                        <div class="row">
                            <div class="col-xs-3">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                     style="max-height: 45px;"/>
                            </div>
                            <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
                        </div>
                        <div class="row zero_min_height">
                            <div class="col-xs-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5" style="border-bottom: 1px solid black;">
                                <span t-if="company.partner_id.vat">TIN:
                                    <span t-field="company.partner_id.vat"/>
                                </span>
                                <div t-field="company.partner_id"
                                     t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;:       [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"
                                     class="pull-left"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </template>

<template id="report_general">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">

			<h1> Co√±oo </h1>
			
            <div class="page">
                
                <div class="header">
            		<h3>Titulo</h3>
  				</div>


				<div class="page-header">
					<center>
						<h3> 
							Avance General de los Proyectos
						</h3>
					</center>
				</div>

	            <table class="table table-condensed">
	                    
	              <thead>
	                <th colspan="2" class="center">
	                  Proyectos: <strong t-esc="data['len_project']"/>
	                </th>
	              </thead>

	              <tbody>
	                
	                <tr>
	                    <td>Culminados:</td>
	                    <td>
	                        <strong t-esc="data['pro_done']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>En proceso: </td>
	                    <td>
	                        <strong t-esc="data['pro_process']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Detenidos:</td>
	                    <td>
	                        <strong t-esc="data['pro_stopped']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Porcentaje de Avance:</td>
	                    <td>
	                        <strong t-esc="data['pro_porcen']"/> %
	                    </td>
	                </tr>

	              </tbody>
	          
	            </table>
				
				<table class="table table-condensed">
	                    
	              <thead>
	                <th colspan="2" class="center">
	                  Horas Hombres: <strong t-esc="data['hour_total']"/>
	                </th>
	              </thead>

	              <tbody>
	                
	                <tr>
	                    <td>Ejecutadas:</td>
	                    <td>
	                        <strong t-esc="data['hour_done']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>En proceso: </td>
	                    <td>
	                        <strong t-esc="data['hour_process']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Sin ejecutar:</td>
	                    <td>
	                        <strong t-esc="data['hour_stopped']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Porcentaje de Avance:</td>
	                    <td>
	                        <strong t-esc="data['hour_porcen']"/> %
	                    </td>
	                </tr>

	              </tbody>
	          
	            </table>

            </div>
        </t>
    </t>
</template>

<template id="external_layout_footer_customized" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="text-center" style="border-top: 1px solid black;">
                        <ul t-if="not company.custom_footer" class="list-inline">
                            <li t-if="company.phone">Tel:
                                <span t-field="company.phone"/>
                            </li>

                            <li t-if="company.fax and company.phone">&amp;bull;</li>
                            <li t-if="company.fax">Fax:
                                <span t-field="company.fax"/>
                            </li>

                            <li t-if="company.website">&amp;bull;</li>
                            <li t-if="company.website">
                                <span t-field="company.website"/>
                            </li>
                        </ul>

                        <t t-if="company.custom_footer">
                            <span t-raw="company.rml_footer"/>
                        </t>

                        <ul class="list-inline">
                            <li>Page:</li>
                            <li>
                                <span class="page"/>
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </xpath>
        </template>
</odoo>
