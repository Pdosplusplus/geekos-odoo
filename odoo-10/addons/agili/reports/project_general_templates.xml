<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_general">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">

			<h1> Co√±oo </h1>
			
            <div class="page">
                
                <div class="header">
            		<h3>Titulo</h3>
  				</div>


				<div class="page-header">
					<center>
						<h3> 
							Avance General de los Proyectos
						</h3>
					</center>
				</div>

	            <table class="table table-condensed">
	                    
	              <thead>
	                <th colspan="2" class="center">
	                  Proyectos: <strong t-esc="data['len_project']"/>
	                </th>
	              </thead>

	              <tbody>
	                
	                <tr>
	                    <td>Culminados:</td>
	                    <td>
	                        <strong t-esc="data['pro_done']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>En proceso: </td>
	                    <td>
	                        <strong t-esc="data['pro_process']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Detenidos:</td>
	                    <td>
	                        <strong t-esc="data['pro_stopped']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Porcentaje de Avance:</td>
	                    <td>
	                        <strong t-esc="data['pro_porcen']"/> %
	                    </td>
	                </tr>

	              </tbody>
	          
	            </table>
				
				<table class="table table-condensed">
	                    
	              <thead>
	                <th colspan="2" class="center">
	                  Horas Hombres: <strong t-esc="data['hour_total']"/>
	                </th>
	              </thead>

	              <tbody>
	                
	                <tr>
	                    <td>Ejecutadas:</td>
	                    <td>
	                        <strong t-esc="data['hour_done']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>En proceso: </td>
	                    <td>
	                        <strong t-esc="data['hour_process']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Sin ejecutar:</td>
	                    <td>
	                        <strong t-esc="data['hour_stopped']"/>
	                    </td>
	                </tr>

	                <tr>
	                    <td>Porcentaje de Avance:</td>
	                    <td>
	                        <strong t-esc="data['hour_porcen']"/> %
	                    </td>
	                </tr>

	              </tbody>
	          
	            </table>

            </div>
        </t>
    </t>
</template>
</odoo>