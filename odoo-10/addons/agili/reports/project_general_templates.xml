<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_general">
  <t t-call="agili.report_layout"/>
    <t t-call="report.html_container">
      <t t-call="report.internal_layout">

    <div class="page">

      <table class="table table-condensed">
              
        <thead>
          <th colspan="2" class="center">
            Proyectos: <strong t-esc="data['len_project']"/>
          </th>
        </thead>

        <tbody>
          
          <tr>
              <td>Culminados:</td>
              <td>
                  <strong t-esc="data['pro_done']"/>
              </td>
          </tr>

          <tr>
              <td>En proceso: </td>
              <td>
                  <strong t-esc="data['pro_process']"/>
              </td>
          </tr>

          <tr>
              <td>Detenidos:</td>
              <td>
                  <strong t-esc="data['pro_stopped']"/>
              </td>
          </tr>

          <tr>
              <td>Porcentaje de Avance:</td>
              <td>
                  <strong t-esc="data['pro_porcen']"/> %
              </td>
          </tr>

        </tbody>
    
      </table>

      <table class="table table-condensed">
              
        <thead>
          <th colspan="2" class="center">
            Horas Hombres: <strong t-esc="data['hour_total']"/>
          </th>
        </thead>

        <tbody>
          
          <tr>
              <td>Ejecutadas:</td>
              <td>
                  <strong t-esc="data['hour_done']"/>
              </td>
          </tr>

          <tr>
              <td>En proceso: </td>
              <td>
                  <strong t-esc="data['hour_process']"/>
              </td>
          </tr>

          <tr>
              <td>Sin ejecutar:</td>
              <td>
                  <strong t-esc="data['hour_stopped']"/>
              </td>
          </tr>

          <tr>
              <td>Porcentaje de Avance:</td>
              <td>
                  <strong t-esc="data['hour_porcen']"/> %
              </td>
          </tr>

        </tbody>
    
      </table>

    </div>
  </t>
</t>
</template>

<template id="report_layout">
    <!-- Multicompany -->
    <t t-call="agili.report_header" />
    <t t-raw="0" ></t>
    <t t-call="agili.report_footer" />
</template>

<template id="report_header">
    <div class="header">
        <div class="contains">
          <div class="row">
              <div class="col-xs-12">
                   <img class="img-responsive" src="/agili/static/src/img/agili-icon-5.png"/>
              </div>
          </div>
        </div>
    </div>
</template>

<template id="report_footer">
    <footer>
      <div class='footer'>
          <div class="row">
              <div class="col-xs-12">
                  <h1> Logica </h1>
              </div>
          </div>
      </div> 
    </footer>     
</template>

</odoo>