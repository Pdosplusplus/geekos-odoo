<odoo>
    <data>
        <record id="group_agili_manager" model="res.groups">
            <field name="name">Agili / Administrador</field>
        </record>

        <record id="agili_user_admin_project" model="ir.rule">
            <field name="name"> Usuario Administrador Proyecto </field>
            <field name="model_id" ref="model_agili_project"/>
            <field name="groups" eval="[(4, ref('agili.group_agili_manager'))]"/>
        </record>

        <record id="agili_user_admin_workplan" model="ir.rule">
            <field name="name"> Usuario Administrador Work Plan </field>
