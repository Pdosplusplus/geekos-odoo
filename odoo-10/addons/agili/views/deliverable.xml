<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Data file form 

    @ function: Crear y modificar registros 
    @ Descrip: Este data file define como sera el formulario, que datos seran registrados por el usuario etc
    -->
    <record model="ir.ui.view" id="deliverable_form_view">

      <field name="name">deliverable.form</field>
      <field name="model">agili.deliverable</field>
      <field name="arch" type="xml">

        <form string="deliverable Form">
       
          <sheet>
            <!-- Agrupamos los campos que generan la toma de decisiones-->
            <group string="Control">
              <field name="name"/>
              <field name="de_project_id"/>
              <field name="deliverable"/>
              <field name="de_type"/>
            </group>

          </sheet>
        </form>

      </field>

    </record>


    <!-- Record search 
      @Function: Para realizar la busqueda de los registros
      
      @Description: Con el record search definimos de que manera seran buscado los registros, definiendo por cuales campos se haran las busquedas, a침adiendo domain, entre otros.
    -->
    <record model="ir.ui.view" id="deliverable_search_view">

      <field name="name">deliverable.search</field>
      <field name="model">agili.deliverable</field>

      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="de_project_id"/>
          <field name="deliverable"/>
        </search>
      </field>

    </record>

    <!-- Record tree

      @Function: Listar la informaci칩n en una tabla

      @Description: Record para mostrar la informaci칩n en una tabla, donde cada field es una columna.
    -->
    <record model="ir.ui.view" id="deliverable_tree_view">
      <field name="name">deliverable.tree</field>
      <field name="model">agili.deliverable</field>

      <field name="arch" type="xml">
        <tree string="deliverable Tree">
          <field name="de_project_id"/>
          <field name="name"/>
          <field name="deliverable"/>
          <field name="de_type"/>
        </tree>
      </field>

    </record>


      <!-- Tag actions.act_window 
      
        @Function: Este tag o record tiene como funcion contralar el flujo de los views a las acciones de los mismos

        @Descripcion: Una de las cosa que ahce este record es definir el modo en que las vistas seran mostradas, en este caso sera primero el <tree>, <form>, <calendar> ,y de ultimo las graficas <graph>.
      -->
      <record model="ir.actions.act_window" id="deliverable_list_action">

        <field name="name">Entregables</field>
        <field name="res_model">agili.deliverable</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
       
      </record>

      
      <!-- A침adimos un submenu al menu de gestion de proyectos -->
      <menuitem id="deliverable_menu" 
            name="Entregables" 
            parent="agili_menu"
            action="deliverable_list_action"/>

  </data>
</odoo>
