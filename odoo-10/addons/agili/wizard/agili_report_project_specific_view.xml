<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="agili_report_project_specific_view" model="ir.ui.view">
        <field name="name">Reporte especifico de un Proyecto</field>
        <field name="model">agili.report.project.specific</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                
                <group>
                    <field name="responsible_id"/>
                </group>

                <group col="2">
                    <field name="hour_man" widget="checkbox"/>
                    <field name="hour_man_exe" widget="checkbox"/> 
                </group>
                
                <group>
                    <field name="proyects" widget="checkbox"/>
                    <field name="activities" widget="checkbox"/>
                </group>               

                <footer>
                    <button name="print_reporte" 
                    		string="Imprimir" 
                    		type="object" 
                    		class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="action_agili_report_project_specific_view" model="ir.actions.act_window">
        <field name="name">Reporte especifico de un Proyecto</field>
        <field name="res_model">agili.report.project.specific</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="agili_report_project_specific_view"/>
        <field name="target">new</field>
    </record>

    <!-- Añadimos el menu del panel izquierdo -->
    <menuitem id="agili_report_menu" 
              name="Reportes"
              parent="main_agili_menu"/>

    <!-- Añadimos un submenu al menu anterior creado, el cual nos lleva a las views de nuestro modelo -->
    <menuitem id="agili_report_specific_menu" 
    		name="Reporte especifico" 
        	parent="agili_report_menu"
        	action="action_agili_report_project_specific_view"/>

</odoo>
